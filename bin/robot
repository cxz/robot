#!/usr/bin/env ruby

File.tap { |f| require f.expand_path(f.join(f.dirname(__FILE__), '..', 'lib', 'robot.rb')) }

NAME = "Toy Robot"

toy = Toy.new(Board.new)

begin
  parser = CommandParser.new(toy)

  loop do
    ('%s> ' % NAME).display if $stdin.tty?
    input = gets || exit
    cmd = parser.parse(input)
    cmd.execute
  end
rescue Interrupt
  #ouch
end


